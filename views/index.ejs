<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>tABLE</title>
    <style>
        *{
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }
        body {
            background: #000;
            color: white;
        }
        form {
            display: flex;
            flex-direction: column;
            gap: 10px;
            width: 400px;
            padding: 30px;
            border: 1px solid white;
            margin: 20px auto;

        }
        form input {
            height: 30px;
            border-radius: 1rem;
            border: none;
            padding-left: 10px;

        }
        form button {
            height: 30px;
            border-radius: 1rem;
            border: none;
            background: orangered;
            color: white;
            cursor: pointer;
        }
        .password {
            max-width: 100px;
            overflow-x: scroll;
        }
        table {
            width: 100%;
            
        }
        td,th{
            border: 1px solid gray;
            border-radius: 1rem;
            padding-left: 10px;
            height: 40px;
        }
        h3 {
            text-align: center;
        }
        
    </style>
</head>
<body>
    <form action="/add" method="post">
        <h3>Add User</h3>
        <input type="text" name="name" placeholder="name" required>
        <input type="number" min="14" max="100" class="age" name="age" placeholder="age" required>
        <input type="email" name="email" placeholder="email" required>
        <input type="password" name="password" placeholder="password" required>
        <button type="sumbit">Sumbit</button>
    </form>
    <form action="/:id" method="post">
        <h3>Find User By ID</h3>
        <input type="text" name="id" required >
        <button type="sumbit">Sumbit</button>
    </form>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Password</th>
                <th>Edit/Delete</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((el,i)=>{ %>
                <tr>
                    <td><%= i+1 %></td>
                    <td><%= el.name %></td>
                    <td><%= el.age %></td>
                    <td><%= el.email %></td>
                    <td><%= el.password %></td>
                    <td style="display: flex; justify-content: space-around;
                    align-items: center">
                        <a href="/edit/<%= el.id %>">Edit</a>

                        <a href="/delete/<%= el.id %>">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <script>
        const age = document.querySelector('.age')
        if(age.value < 14){
            age.value = 14
        }

    </script>
</body>
</html>